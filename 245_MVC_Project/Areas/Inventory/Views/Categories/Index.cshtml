@using _245_MVC_Project.HtmlHelpers
@model IEnumerable<ITP245_Model.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Areas/Inventory/Views/Shared/_Layout.cshtml";
}


<div class="row itemFormBox indexFont">
    <div class="col-sm-4 col-xs-12"  @*style="margin-bottom:1.5rem;margin-top:0.5rem;"*@>
        @Html.ActionLink("Create Category", "Create", null, new { @class = "btn btn-primary btn-lg btn-block indexTableBtns" })
    </div>
</div>

<div class="row myTableBox indexFont">
    <table class="table"style="table-layout: fixed;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class=" btn-group-vertical btn-group-sm pull-right indexTableBtns">
                        @Html.IndexLinks(item, "Categories")
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
   

