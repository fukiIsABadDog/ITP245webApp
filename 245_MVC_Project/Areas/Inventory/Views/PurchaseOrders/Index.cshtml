@using _245_MVC_Project.HtmlHelpers
@model IEnumerable<ITP245_Model.PurchaseOrder>

@{
    ViewBag.Title = "Purchase Orders";
    Layout = "~/Areas/Inventory/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create Purchase Order", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseOrderNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PoDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseOrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Vendor.Name)*@
                @Html.ActionLink(item.Vendor.Name, "Details", "Vendors", new { area = "Inventory", id = item.VendorId }, null)

            </td>
            <td>
                @Html.IndexLinks(item,"PurchaseOrders")
                @*@Html.ActionLink("Edit", "Edit", new { id = item.PurchaseOrderNumber }, new { @class = "label-primary badge " }) |
                @Html.ActionLink("Details", "Details", new { id = item.PurchaseOrderNumber }, new { @class = "label-primary badge " }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseOrderNumber }, new { @class = "label-danger badge " })*@
            </td>
        </tr>
    }

</table>
