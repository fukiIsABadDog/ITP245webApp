<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Voyager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Inventory", "Index", "InventoryHome", new { area = "Inventory", controller = "InventoryHomeController" }, new { @class = "navbar-brand" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @* Images *@
    <picture>
        <img id="circle1" src="~/Images/Circle.png" alt="circle " />
    </picture>
    <picture>
        <img id="circle2" src="~/Images/Circle.png" alt="circle" />
    </picture>
    <picture>
        <img id="circle3" src="~/Images/Circle.png" alt="circle" />
    </picture>
    <picture>
        <img id="homeBgImage" src="~/Images/galaxyPattern.png" alt="tbd " />
    </picture>



    <div class="container body-content">


        <div class="row visible-md visible-lg">
            <div class="title-Box-lg">
                <div class="title-Font-lg">@ViewBag.Title</div>
            </div>
        </div>
        <div class="row visible-sm visible-xs">      
            <div class="title-Box-sm">
             <div class="title-Font-sm">@ViewBag.Title</div>
             </div>
        </div>


        <div class="row">
            @Html.Partial("_Inventory")
        </div>


        @RenderBody()



        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
            <p>Version: @ViewContext.Controller.GetType().Assembly.GetName().Version</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>