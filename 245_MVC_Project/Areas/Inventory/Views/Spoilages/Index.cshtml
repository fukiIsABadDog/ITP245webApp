@model IEnumerable<ITP245_Model.Spoilage>

@{
    ViewBag.Title = "Spoilages";
    Layout = "~/Areas/Inventory/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReasonType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpoilageDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReasonType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpoilageDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Name)
        </td>
        <td class="btn">
            @Html.ActionLink("Edit", "Edit", new { id=item.SpoilageId }, new { @class = "label-primary badge " }) |
            @Html.ActionLink("Details", "Details", new { id=item.SpoilageId }, new { @class = "label-primary badge " }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SpoilageId }, new { @class = "label-danger badge " })
        </td>
    </tr>
}

</table>
