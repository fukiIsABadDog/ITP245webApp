@using _245_MVC_Project.HtmlHelpers
@model IEnumerable<ITP245_Model.PoItem>

@{
    ViewBag.Title = "Purchase Order Items";
    Layout = "~/Areas/Inventory/Views/Shared/_Layout.cshtml";
}




<p>
    @Html.ActionLink("Create PO Item", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseOrder.PurchaseOrderNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseOrder.PurchaseOrderNumber)
            </td>
            <td>
                @Html.IndexLinks(item,"PoItems")
                @*@Html.ActionLink("Edit", "Edit", new { id = item.PoItemId }, new { @class = "label-primary badge " }) |
                @Html.ActionLink("Details", "Details", new { id = item.PoItemId }, new { @class = "label-primary badge " }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PoItemId }, new { @class = "label-danger badge " })*@
            </td>
        </tr>
    }

</table>
