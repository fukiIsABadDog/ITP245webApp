@model ITP245_Model.Item

@{
    ViewBag.Title = "Items";

    Layout = "~/Areas/Inventory/Views/Shared/_Layout.cshtml";
}

<div class="row itemFormBox indexFont">
    <div class="col-sm-4 col-xs-12 " style="margin-bottom:1rem;margin-top:1.5rem;">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-block indexTableBtns" })
    </div>
</div>
<section class=" row myTableBox indexFont">
            <div class="subTitle" style="padding-left:2rem">Details</div>
            <hr />
            <dl class="dl-horizontal col-xs-12 col-md-6">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.QuantityOnHand)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.QuantityOnHand)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.RetailPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RetailPrice)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StandardCost)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StandardCost)
                </dd>

                <dt class="hidden">
                    @Html.DisplayNameFor(model => model.ImageLocation)
                </dt>

                <dd class="hidden">
                    @Html.DisplayFor(model => model.ImageLocation)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </dt>

                <dd>
                    @Html.ActionLink(Model.Category.Name, "Details", "Categories", new { area = "Inventory", id = Model.CategoryId }, htmlAttributes: new { @class = "indexFont" })
                    <hr/> 
                </dd>
           
                <dt>
                    Options
                </dt>
                <dd>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ItemId }, new { @class = "btn btn-warning btn-sm btn-block indexTableBtns" })

                </dd>

                
            </dl>

            <div class="col-xs-12 col-md-6" style="padding-bottom:1rem">


                @if (!string.IsNullOrEmpty(Model.ImageLocation))
                {
                    <img src="@Href(Model.ImageLocation)" class="subIndexImg center-block"/>
                }
                else
                {
                    <img id="item_image" style="width: 220px; height: 300px; border:none;" />
                }

            </div>

</section>