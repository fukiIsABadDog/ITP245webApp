@model ITP245_Model.Item

@{
    ViewBag.Title = "Items";

    Layout = "~/Areas/Inventory/Views/Shared/_Layout.cshtml";
}


<section class="myTableBox">
        <div class="container">
            <div class="row">
                <h2>Details</h2>
                <hr />
                <dl class="dl-horizontal col-xs-12 col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.QuantityOnHand)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.QuantityOnHand)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.RetailPrice)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.RetailPrice)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.StandardCost)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.StandardCost)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ImageLocation)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ImageLocation)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </dt>

                    <dd>
                        @Html.ActionLink(Model.Category.Name, "Details", "Categories", new { area = "Inventory", id = Model.CategoryId }, null)
                        @*@Html.DisplayFor(model => model.Category.Name)*@
                    </dd>

                </dl>

                <div class="col-xs-12 col-md-6" style="padding-bottom:1rem">


                    @if (!string.IsNullOrEmpty(Model.ImageLocation))
                    {
                        <img src="@Href(Model.ImageLocation)" style="width:220px;height:300px;" />
                    }
                    else
                    {
                        <img id="item_image" style="width: 220px; height: 300px; border:none;" />
                    }

                </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
            @Html.ActionLink("Edit", "Edit", new { id = Model.ItemId }, new { @class = "btn btn-warning" })

        </p>
</section>