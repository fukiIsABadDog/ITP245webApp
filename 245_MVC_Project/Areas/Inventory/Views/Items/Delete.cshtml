@model ITP245_Model.Item

@{
    ViewBag.Title = "Items";
    ViewBag.Subtitle = "Delete Item";
    Layout = "~/Areas/Inventory/Views/Shared/_Layout.cshtml";
}
<div class="row itemFormBox indexFont">
    <div class="col-sm-4 col-xs-12 " style="margin-bottom:1rem;margin-top:1.5rem;">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-block btn-block indexTableBtns" })
    </div>
</div>


<div class="row myTableBox indexFont" style="margin-bottom: 2rem;">
    <div class="subTitle" style="margin-left:2rem;">@ViewBag.Subtitle</div>
    <hr />
    <dl class="dl-horizontal col-xs-6">
        <dt> Warning</dt>
        <dd class="alert-danger">
            Are you sure you want to delete this?

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QuantityOnHand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuantityOnHand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RetailPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RetailPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StandardCost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StandardCost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageLocation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageLocation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Category.Name)*@

            @Html.ActionLink(Model.Category.Name, "Details", "Categories", new { area = "Inventory", id = Model.CategoryId }, htmlAttributes: new {@class="indexFont"})
            <hr />
        </dd>
        <dt>
            Options
        </dt>
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-danger btn-sm btn-block indexTableBtns " />
            }

        </dd>
    </dl>

    <div class="col-xs-12 col-md-6" style="padding-bottom:1rem">


        @if (!string.IsNullOrEmpty(Model.ImageLocation))
        {
            <img src="@Href(Model.ImageLocation)" style="width:220px;height:300px;" />
        }
        else
        {
            <img id="item_image" style="width: 220px; height: 300px; border:none;" />
        }

    </div>
</div>
    





